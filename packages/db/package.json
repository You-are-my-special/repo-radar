{
  "name": "@acme/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./edge": {
      "import": "./src/edge.ts",
      "require": "./src/edge.ts"
    },
    "./interfaces": {
      "import": "./dbschema/interfaces.ts",
      "require": "./dbschema/interfaces.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "biome format ./src",
    "lint": "biome lint ./src",
    "push": "pnpm with-env drizzle-kit push:mysql --config src/config.ts",
    "studio": "pnpm with-env drizzle-kit studio --config src/config.ts",
    "typecheck": "pnpm run build && tsc --noEmit --emitDeclarationOnly false",
    "build": "npx @edgedb/generate edgeql-js & npx @edgedb/generate interfaces",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.10.1",
    "edgedb": "^1.5.5",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@acme/tsconfig": "workspace:*",
    "@edgedb/generate": "^0.5.3",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.18",
    "@biomejs/biome": "^1.7.1",
    "mysql2": "^3.9.7",
    "typescript": "^5.4.5"
  }
}